{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist/",
    "sourceMap": true,
    "strict": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "module": "es6",
    "moduleResolution": "node",
    "target": "es5",
    "allowJs": true,
    "jsx": "react",
    "baseUrl": "./src",
    "paths": {
      "common/*": ["components/common/*"],
      "components/*": ["components/*"],
      "store/*": ["store/*"],
      "hooks/*": ["hooks/*"],
      "api/*": ["api/*"],
      "types/*": ["types/*"],
      "utils/*": ["utils/*"],
      "~/*": ["*"]
    }
  },
  "include": ["./**/*"]
}
